const API_URL = 'http://localhost:3000/api';
export const apiCall = async (endpoint, options = {}) => {
  const token = localStorage.getItem('token');
  const headers = {
    'Content-Type': 'application/json',
    ...options.headers,
  };
  if (token) {
    headers['Authorization'] = `Bearer ${token}`;
  }
  try {
    const response = await fetch(`${API_URL}${endpoint}`, {
      ...options,
      headers,
    });
    if (!response.ok) {
      throw new Error(`Error ${response.status}: ${response.statusText}`);
    }
    return await response.json();
  } catch (error) {
    console.error('API Error:', error);
    throw error;
  }
};
export const getUbicaciones = () => apiCall('/ubicaciones');
export const getAlertas = () => apiCall('/alertas');
export const crearAlerta = (data) => apiCall('/alertas', {
  method: 'POST',
  body: JSON.stringify(data),
});
export const cambiarEstadoAlerta = (id, estado) => apiCall(`/alertas/${id}/estado`, {
  method: 'PUT',
  body: JSON.stringify({ nuevo_estado: estado }),
});
export const getHealth = () => apiCall('/health');
